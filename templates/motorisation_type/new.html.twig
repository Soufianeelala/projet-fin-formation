{# templates/motorisation_type/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Créer un type de motorisation{% endblock %}

{% block main %}
<section class="motorisation-type-section">
  <div class="motorisation-type-form-container">
    <h2 class="motorisation-type-title">
      <i class="fas fa-cogs"></i> Créer un type de motorisation
    </h2>

    {{ form_start(form, {
      attr: { class: 'motorisation-type-form' }
    }) }}

      <div class="form-group">
        {{ form_row(form.nom, {
          label: 'Nom du type',
          attr: { placeholder: 'Entrez le nom de la motorisation' }
        }) }}
      </div>

      {{ form_widget(form._token) }}

      <button type="submit" class="submit-btn">
        {{ button_label|default('Enregistrer') }}
      </button>

    {{ form_end(form) }}

    <a href="{{ path('app_motorisation_type_index') }}"
       class="create-btn">
      ← Retour à la liste
    </a>
  </div>
</section>
{% endblock %}
