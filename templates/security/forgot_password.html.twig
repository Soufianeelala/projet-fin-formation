{# templates/security/forgot_password.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block main %}
<section class="forgot-password-section">
  <div class="forgot-password-form-container">
    <h2 class="forgot-password-title">Mot de passe oublié</h2>

    {% for message in app.flashes('success') %}
      <div class="flash-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
      <div class="flash-error">{{ message }}</div>
    {% endfor %}

    <form method="post" class="forgot-password-form" action="{{ path('app_forgot_password') }}">
      <div class="form-group">
        <label for="email">Votre email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          placeholder="Votre adresse e-mail" 
          required
        >
      </div>

      <input type="hidden" name="_token" value="{{ csrf_token('forgot_password') }}">

      <button type="submit" class="submit-btn">Envoyer</button>
    </form>
  </div>
</section>
{% endblock %}
