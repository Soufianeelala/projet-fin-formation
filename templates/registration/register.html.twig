{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block main %}
<section class="registration-section">
  <div class="registration-form-container">
    <h2 class="registration-title"><i class="fas fa-user-plus"></i> Inscription</h2>

    {{ form_start(registrationForm, {
      'attr': {'class': 'registration-form'}
    }) }}

      {{ form_errors(registrationForm) }}

      <div class="form-group">
        {{ form_row(registrationForm.name, {
          'label': 'Nom',
          'attr': {'placeholder': 'Votre nom'}
        }) }}
      </div>
      <div class="form-group">
        {{ form_row(registrationForm.email, {
          'label': 'Email',
          'attr': {'placeholder': 'Votre email'}
        }) }}
      </div>
      <div class="form-group">
        {{ form_row(registrationForm.plainPassword.first, {
          'label': 'Mot de passe',
          'attr': {'placeholder': 'Mot de passe'}
        }) }}
      </div>
      <div class="form-group">
        {{ form_row(registrationForm.plainPassword.second, {
          'label': 'Confirmez le mot de passe',
          'attr': {'placeholder': 'Confirmation mot de passe'}
        }) }}
      </div>
     

      {{ form_widget(registrationForm._token) }}

      <button type="submit" class="submit-btn">Sâ€™inscrire</button>

    {{ form_end(registrationForm) }}
  </div>
</section>
{% endblock %}
