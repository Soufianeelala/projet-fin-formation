{% extends 'base.html.twig' %}

{% block title %}Créer un type de performance{% endblock %}

{% block main %}
<section class="performance-type-section">
  <div class="performance-type-form-container">
    <h2 class="performance-type-title">
      <i class="fas fa-tachometer-alt"></i> Créer un type de performance
    </h2>

    {{ form_start(form, {
      attr: { class: 'performance-type-form' }
    }) }}

      <div class="form-group">
        {{ form_row(form.nom, {
          label: 'Nom du type',
          attr: { placeholder: 'Entrez le nom' }
        }) }}
      </div>

      {{ form_widget(form._token) }}

      <button type="submit" class="submit-btn">
        {{ button_label|default('Enregistrer') }}
      </button>

    {{ form_end(form) }}

    <a href="{{ path('app_performance_type_index') }}"
       class="btn-backperformance">
      ← Retour à la liste
    </a>
  </div>
</section>
{% endblock %}
