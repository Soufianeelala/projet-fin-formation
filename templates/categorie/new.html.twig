{# templates/categorie/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouvelle catégorie{% endblock %}

{% block main %}
<section class="categorie-section">
  <div class="categorie-form-container">
    <h2 class="categorie-title">
      <i class="fas fa-folder-plus"></i> Créer une nouvelle catégorie
    </h2>

    {{ form_start(form, {
      attr: { class: 'categorie-form' }
    }) }}

      <div class="form-group">
        {{ form_row(form.nom, {
          label: 'Nom de la catégorie',
          attr: { placeholder: 'Entrez le nom' }
        }) }}
      </div>

      {{ form_widget(form._token) }}

      <button type="submit" class="submit-btn">
        {{ button_label|default('Enregistrer') }}
      </button>

    {{ form_end(form) }}

    <a href="{{ path('app_categorie_index') }}" class="create-btn">
      ← Retour à la liste
    </a>
  </div>
</section>
{% endblock %}
